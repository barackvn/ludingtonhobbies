<odoo>
    <data>
        <record id="report_purchase_order_mail_xlsx" model="ir.actions.report">
            <field name="name">Order Report Excel</field>
            <field name="model">purchase.order</field>
            <field name="report_type">xlsx</field>
            <field name="report_name">purchase_mail.purchase_order_mail_xlsx</field>
            <field name="report_file">purchase_order_mail_xlsx</field>
            <field name="print_report_name">'Order Report Excel'</field>
            <field name="attachment_use">True</field>
        </record>

        <record id="report_purchase_order_mail" model="ir.actions.report">
            <field name="name">Order Report</field>
            <field name="model">purchase.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">purchase_mail.template_purchase_order_mail</field>
            <field name="report_file">purchase_mail.template_purchase_order_mail</field>
            <field name="print_report_name">'Purchase Order - %s' % (object.name).replace('/', '')</field>
            <field name="attachment_use">True</field>
        </record>

        <template id="template_purchase_order_mail">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <br/>
                            <div class="row">
                                <div class="col-12">
                                    <table class="table table-bordered">
                                        <thead style="display: table-row-group">
                                            <tr>
                                                <th style="border: 1px solid black;background-color:#D0D0D0;">Part Number</th>
                                                <th style="border: 1px solid black;background-color:#D0D0D0;">Cost</th>
                                                <th style="border: 1px solid black;background-color:#D0D0D0;">Quantity</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="o.order_line" t-as="line">
                                                <tr>
                                                    <td style="border: 1px solid black;"><span t-esc="line.product_id.default_code"/></td>
                                                    <td style="border: 1px solid black;"><span t-esc="line.product_id.standard_price"/></td>
                                                    <td style="border: 1px solid black;"><span t-esc="line.product_qty"/></td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>